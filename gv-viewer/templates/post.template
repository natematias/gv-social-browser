<div class="container" id="post">
  <div class="hero-unit">
    <div class="btn" style="align:right" id="close_post">Close</div>
    <div class="btn" style="align:right" id="toggle_post">Content</div>
      <h2><%=post.title%></h2>
      <h3><%=new Date(Date.parse(post.publication_date)).toDateString()%> <a href="<%=post.link%>">[permalink]</a></h3>
    <div id="post_content">
      <%=post.content%>
    </div>
  </div>
</div>
